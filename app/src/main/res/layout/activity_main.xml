<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpha.shift.MainActivity">

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="Time"
        android:layout_alignBaseline="@+id/TextTime"
        android:layout_alignBottom="@+id/TextTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textView_Date"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="Date"
        android:layout_alignBaseline="@+id/TextDate"
        android:layout_alignBottom="@+id/TextDate"
        android:layout_toStartOf="@+id/TextDate" />

    <EditText
        android:id="@+id/TextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewTime" />

    <EditText
        android:id="@+id/TextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/TextTime"
        android:layout_alignStart="@+id/TextTime"
        android:layout_marginTop="95dp" />

    <EditText
        android:id="@+id/TextEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TextTime"
        android:layout_below="@+id/TextTime"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/textViewEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextEndTime"
        android:layout_alignStart="@+id/textViewTime"
        android:text="End Time" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
